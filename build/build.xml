<?xml version="1.0" encoding="UTF-8"?>
<project name="CFFA3000A3Driver" default="all" basedir="..">
	<property name="builddir" value="${basedir}/build" />
	<property file="${builddir}/cffa3000a3driver.properties"/>
	<property file="${builddir}/cffa3000a3driver-default.properties"/>
	<property name="projdir" value="${basedir}" />
	<property name="acJar" value="${builddir}/lib/AppleCommander-1.3.5.6-ac.jar" />
	<target name="all" description="Bulid everything." depends="setup, clean, ftp-get, assemble, builddsk">
	</target>
	<target name="setup">
		<available file="${builddir}/disk1.dsk" property="have-pascal-disks"/>
		<condition property="need-pascal-disks">
			<not>
				<isset property="have-pascal-disks" />
			</not>
		</condition>
	</target>
	<target name="clean">
		<!--
		Clean up everything
		-->
	</target>
	<target name="ftp-get" depends="setup" if="need-pascal-disks">
		<!--
		Pull down Pascal images
		-->
		<get src="http://mirrors.apple2.org.za/ftp.apple.asimov.net/images/programming/pascal/ucsd/UCSD%20Pascal%201.2_1.DSK"
		dest="build/pDisk1.dsk" 
		username="anonymous"
		password="asdf@"/>
		<get src="http://mirrors.apple2.org.za/ftp.apple.asimov.net/images/programming/pascal/ucsd/UCSD%20Pascal%201.2_2.DSK"
		dest="build/pDisk2.dsk" 
		username="anonymous"
		password="asdf@"/>
	</target>
	<target name="assemble" description="Assemble source.">
		<!--
		Assemble the driver source
		-->
	</target>
	<target name="builddsk">
		<!--
		Start disk image
		-->
	</target>
</project>

